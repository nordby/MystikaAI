{
  "name": "mistika-telegram-bot",
  "version": "1.0.0",
  "description": "MISTIKA Telegram Bot for Tarot, Numerology and Lunar Calendar",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
